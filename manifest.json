{
    "name": "Webapp Multi Instances",
    "id": "webapp_multi_inst",
    "packaging_format": 1,
    "description": {
        "en": "Web App Multi Instances without FTP access",
        "fr": "Web App Multi Instances vide sans accès FTP"
    },
    "url": "https://github.com/polytan02/",
    "license": "free",
    "maintainer": {
        "name": "polytan02",
        "email": "polytan02@mcgva.org"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm"
    ],
    "requirements": {
         "yunohost": ">= 2.4.0"
    },
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for your Webapp",
                    "fr": "Choisissez un domaine pour votre Webapp"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for your Webapp",
                    "fr": "Choisissez un chemin pour votre Webapp"
                },
                "example": "/site",
                "default": "/site"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public website ?",
                    "fr": "Est-ce un site publique ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            },
            {
                "name": "db_create",
                "ask": {
                    "en": "Should we create a database for this app ?",
                    "fr": "Doit-on créer une base de donnée pour cette app ?"
                },
                "choices": ["Yes", "No"],
                "default": "No"
            },
            {
                "name": "db_name",
                "ask": {
                    "en": "Choose a name for the database. A user with the same name and full rigths will be created. Script will stop if database already exists",
                    "fr": "Choisissez un nom pour la base de donnée. Un utilisateur avec le même nom et tous les droits sera créé. Le script s'arrêtera si la bdd existe déjà"
                },
                "example": "webapp_db",
                "default": "webapp_db"
            },
            {
                "name": "db_pwd",
                "ask": {
                    "en": "Choose a STRONG password to access the database",
                    "fr": "Choisissez un mot de passe FORT pour accéder à la base de donnée"
                },
                "example": "MysECURe123PwD",
                "default": "MysECURe123PwD"
            }
        ]
    }
}
